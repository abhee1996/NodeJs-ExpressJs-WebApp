<script>
  const search = document.getElementById("search");
const submitbtn = document.getElementById("submitbtn");
const cardbody = document.querySelector(".card-body");
const city = document.getElementById("city");
const country = document.querySelector(".country");
const temp = document.querySelector(".temp");

const getCity = async (e) => {
  e.preventDefault();
  let cityVal = search.value;
  const url = `https://api.openweathermap.org/data/2.5/weather?q=${cityVal}&appid=1e96e81f766873da2c82ca84982c36e8`;

  if (cityVal === "") {
    alert("search is empty");
    cardbody.innerText = "Please city field cant be empty";
  } else {
    try {
      const response = await fetch(url);
      const data = await response.json();
      const arrdata=[data]
      console.log("arrdata", arrdata[0]);
      temp.innerText = arrdata[0]?.main?.temp +"'C";
      city.innerText = cityVal;
       country.innerText = arrdata[0]?.sys?.country;
       return arrdata;
    } catch (error) {
      cardbody.innerText = "Please city field is invalid";
    }
  }
  let text = e.target.value;
  city = text;
};

submitbtn.addEventListener("click", getCity);

</script>
